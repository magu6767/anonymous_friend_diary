<% provide(:button_text, "投稿する") %>

<%= form_with(model: @post) do |f| %>
  <%= render "shared/error_messages", object: f.object %>  
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :content %>
    <%= f.text_area :content %>
  </div>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>

<% end %>